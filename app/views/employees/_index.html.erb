<table class="table table-striped">
  <tr class="thead">
    <th>Emp ID</th>
    <th>Employee name</th>
    <th>Email</th>
    
  </tr>
  
  <% @employees.each do |employee| %>
    <tr class = "tdata">
      <td><%= employee.emp_id %></td>
      <td><%= link_to employee.full_name, employee_path(employee) %></td>
      <td><%= employee.email %></td>
      <td><%= link_to 'Generate Pay Slip', new_payslip_path(:emp_id =>employee.emp_id, :emp =>employee.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal_popup'} %> </td>
      <td><%= link_to edit_employee_path(employee), class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      </td>
      
      <td><%= link_to employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
         <span class="glyphicon glyphicon-remove"></span>
      <% end %>
      </td>
  
    </tr>
  <% end %>
</table>

<div id="modal_popup" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      
    </div>
  </div>
</div>